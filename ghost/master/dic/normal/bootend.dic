OnNotifyUserInfo
{
	if isReadUserInfoAlready != 1
	{
		tempUsername = reference[0]
		_birthDay = SPLIT(reference[2], ',')
		userBirthMonth = TOINT(_birthDay[1])
		userBirthDay = TOINT(_birthDay[2])
		
		case reference[3]
		{
			when 'male'
				userGender = 1
			when 'female'
				userGender = 2
			others
				userGender = 0
		}

		isReadUserInfoAlready = 1
	}
}