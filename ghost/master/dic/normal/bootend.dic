}

NormalCloseTalk
{
	Init
	--
	case dicMode
	{
		when MODE_NORMAL
			TOSTR(EVAL(CHR(0x22)+CloseTalkBasic()+CHR(0x22)))
		when MODE_YURI
			TOSTR(EVAL(CHR(0x22)+CloseTalkYuri()+CHR(0x22)))
		when MODE_SUZU
			TOSTR(EVAL(CHR(0x22)+CloseTalkSuzu()+CHR(0x22)))
	}
	--
	'\w9\w9\-\e'
}


