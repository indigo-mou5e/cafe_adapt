WD_drink
{
	_menus = (/
	'ジンジャーエール',/
	'レモネード',/
	'アイスコーヒー',/
	'アイスティー',/
	'コーヒーフロート')


	// 引数が適切なindexのときはそれに応じた配列の要素を返す
	_index = _argv[0]
	_rev = ''

	// 引数が-1のときは配列の大きさを返す
	if _index == '-1'{
		_rev = ARRAYSIZE(_menus)
	}
	// 上記のどちらでもないときは配列からランダムな値を返す
	// （引数無しで呼んだ場合含む。つまりは、普通の単語集としても使える。）
	else{
		if _index == "" || _index < 0 || _index >= ARRAYSIZE(_menus){
			_index = RAND(ARRAYSIZE(_menus))
		}

		_rev = _menus[_index]
	}

	// return _rev
	_rev
}

